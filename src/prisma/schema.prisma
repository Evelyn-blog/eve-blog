generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Post {
  id               Int     @id @default(autoincrement())
  title            String
  category         String
  summary          String
  authorName       String
  imageUrl         String?
  referencePostUrl String?
  date             String?
}
